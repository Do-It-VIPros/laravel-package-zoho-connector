# Configuration test du package Zoho Connector
APP_ENV=testing
APP_DEBUG=true

# Zoho Configuration
ZOHO_ENABLED=false
ZOHO_TEST_MODE=true
ZOHO_MOCK_RESPONSES=true
ZOHO_VALIDATE_MOCKS=false

# Credentials de test (non-sensibles)
ZOHO_CLIENT_ID=test_client_id_123456789
ZOHO_CLIENT_SECRET=test_secret_abcdefghijklmnop
ZOHO_USER=test_user
ZOHO_APP_NAME=test_app
ZOHO_ACCOUNT_DOMAIN=eu

# Base de données test
DB_CONNECTION=testing
DB_DATABASE=:memory:

# Désactiver services externes
ES_ENABLED_FOR_TESTS=false
QUEUE_CONNECTION=sync
CACHE_DRIVER=array
MAIL_MAILER=array

# Logging
LOG_CHANNEL=testing
LOG_LEVEL=debug

# Session et cache
SESSION_DRIVER=array
BROADCAST_DRIVER=log
FILESYSTEM_DISK=local

# Performance
ZOHO_REQUEST_TIMEOUT=5